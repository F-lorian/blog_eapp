{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
	 <div id="blog-post" class="panel panel-default blog-post">
        <div class="panel-body">

			<div class="row">
				<div class="col-sm-2">
					{{ form_label(form.current_password) }}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': '...'} }) }}
					<span class="label label-danger error">{{ form_errors(form.current_password) }}</span>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-2">
					{{ form_label(form.plainPassword.first) }}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': '...'} }) }}
					<span class="label label-danger error">{{ form_errors(form.plainPassword.first) }}</span>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-2">
					{{ form_label(form.plainPassword.second) }}
				</div>
				<div class="col-sm-10">
					{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': '...'} }) }}
					<span class="label label-danger error">{{ form_errors(form.plainPassword.second) }}</span>
				</div>
			</div>

        	{{ form_row(form._token) }}
	    </div>
        <br/>
        <span class="label label-danger error">{{ form_errors(form) }}</span>
        <button class="btn btn-primary wide">Valider <i class="glyphicon glyphicon-ok"></i></button>
    </div>
</form>
