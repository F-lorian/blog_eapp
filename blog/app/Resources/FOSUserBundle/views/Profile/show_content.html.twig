{% trans_default_domain 'FOSUserBundle' %}

<div id="blog-post" class="panel panel-default blog-post">
        <div class="panel-body">
        	{% if app.user.id == user.id %}
        	<div class="row">
        		<a class="label label-warning pull-right" href="{{ path('fos_user_profile_edit') }}">Editer profil <i class="glyphicon glyphicon-edit border"></i></a>
        	</div>
        	{% endif %}
        	<div class="row">
	        	<div class="col-sm-2">
	        		<strong>
	        		{% filter nl2br %}
					    {{ 'profile.show.username'|trans}}:
					    {{ 'profile.show.email'|trans }}:
					    {{ 'Prénom'|trans }}:
					    {{ 'Nom'|trans }}:
					    {{ 'Age'|trans }}: 
					{% endfilter %}
					</strong>
	        	</div>
	        	<div class="col-sm-10">
		        	{{ user.username }}<br/>
		    		{{ user.email }}<br/>

		    		
		    		{% if user.username !='' %}
		    		{{ user.surname }}
		    		{% else %}
		    		indéfini
		    		{% endif %}
		    		<br/>
		    		
		    		{% if user.lastname !='' %}
		    		{{ user.lastname }}
		    		{% else %}
		    		indéfini
		    		{% endif %}
		    		<br/>
		    		
		    		{% if user.age !='' %}
		    		{{ user.age }}
		    		{% else %}
		    		indéfini
		    		{% endif %}
	    		</div>
			</div>
			{% if app.user.id == user.id %}
			<br/>
    		<a class="btn btn-primary" href="{{ path('fos_user_change_password') }}">Changer mot de passe <i class="glyphicon glyphicon-edit"></i></a>
			{% endif %}
			
        </div>

</div>