{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Inscription{% endblock %}

{% block fos_user_action %}Inscription{% endblock %}

{% block fos_user_content %}
<form id="edit-form" method="post" action="{{ path("fos_user_registration_register") }}" >

    <div id="blog-post" class="panel panel-default blog-post">
        <div class="panel-body">
            {% for c in form %}
                {% if c != form._token %}
                <div class="row">
                    <div class="col-sm-2">
                        {{ form_label(c) }}
                    </div>
                    <div class="col-sm-10">
                        {{ form_widget(c, { 'attr': {'class': 'form-control', 'placeholder': '...'} }) }}
                        <span class="label label-danger error">{{ form_errors(c) }}</span>
                    </div>
                </div>
                {% else %}
                    {{ form_row(c) }}
                {% endif %}
            {% endfor %}
        </div>

        <br/>
        <span class="label label-danger error">{{ form_errors(form) }}</span>
        <button class="btn btn-primary wide">valider <i class="glyphicon glyphicon-ok"></i></button>

    </div><!--/panel-body-->
</form>
{% endblock fos_user_content %}
