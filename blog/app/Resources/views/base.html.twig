<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite' '@BlogBundle/resources/public/css/*' %}
              <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        <div id="global-container" class="row ">
            <div id="left-panel" class="col-sm-1">
                {% block header %}
                    {% include "BlogBundle:Default:header.html.twig" %}
                {% endblock %}
            </div>

            <div id="container" class="col-sm-11">
                {% block content %}{% endblock %}
            </div>
        </div>
        
        {% block footer %}
            {% include "BlogBundle:Default:footer.html.twig" %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@BlogBundle/resources/public/js/jquery-2.1.1.min.js' '@BlogBundle/resources/public/js/scripts.js' '@BlogBundle/resources/public/js/*' %}
              <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
