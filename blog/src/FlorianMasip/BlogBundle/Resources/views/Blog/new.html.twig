{# src/FlorianMasip/BlogBundle/Resources/views/Blog/register.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}
	{% if url_blog is defined %}
        Modifier blog
    {% else %}
        Inscription
    {% endif %}
{% endblock %}

{% block content %}

<div id="blog-content">

{% if url_blog is defined %}
    <h4 class="page-title">Modifier blog : {{ url_blog }}</h4>
    <form id="edit-form" method="post" target="{{ path('blog_edit', {'url_blog': url_blog }) }}" >
{% else %}
    <h4 class="page-title">Cr√©ation d'un blog</h4>
    <form id="edit-form" method="post" target="{{ path('blog_new') }}" >
{% endif %}

		<div id="blog-post" class="panel panel-default blog-post">
			<div class="panel-body">
				{{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'nom du blog'} }) }}
				<span class="label label-danger error">{{ form_errors(form.name) }}</span>
				{{ form_widget(form.urlAlias, { 'attr': {'class': 'form-control', 'placeholder': 'url du blog'} }) }}
				<span class="label label-danger error">{{ form_errors(form.urlAlias) }}</span>
				{{ form_widget(form.theme, { 'attr': {'class': 'form-control', 'placeholder': 'theme du blog'} }) }}
				<span class="label label-danger error">{{ form_errors(form.theme) }}</span>
				{{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder': 'description du blog'} }) }}
				{{ form_row(form._token) }}
			</div>
			<br/>
				<span class="label label-danger error">{{ form_errors(form) }}</span>
				<button class="btn btn-primary wide">valider <i class="glyphicon glyphicon-ok"></i></button>
		</div><!--/panel-body-->
	</form>

</div>
{% endblock %}



