{# src/FlorianMasip/BlogBundle/Resources/views/Crud/edit.html.twig #}

{% extends '::base.html.twig' %}

{% block title %}
	{% if id_post is defined %}
        Edition
    {% else %}
        Nouvel article
    {% endif %}
{% endblock %}

{% block content %}

<div id="blog-content">

	{% if id_post is defined %}
        <h4 class="page-title">modifier article : {{ id_post }}</h4>
        <form id="edit-form" method="post" target="" >
    {% else %}
        <h4 class="page-title">Nouvel article</h4>
        <form id="edit-form" method="post" target="" >
    {% endif %}
	
		<div id="blog-post" class="panel panel-default blog-post">
			<div class="panel-heading">
				<div class="row">
					<div class="col-sm-2">
						<select id="type" class="form-control">
							<option value="news">News</option>
							<option value="test">Test</option>
							<option value="article">Article</option>
						</select>
					</div>
					<div class="col-sm-10">
						<input type="text" class="form-control" placeholder="Titre" id="titre" name="titre"/>
					</div>
				</div>
			</div>
			<div class="panel-body">
			    <textarea class="form-control" placeholder="Article..." id="post" name="post"></textarea>     
			</div>
			<br/>
			<button class="btn btn-primary wide">valider <i class="glyphicon glyphicon-ok"></i></button>
		</div><!--/panel-body-->
	</form>

</div>
{% endblock %}
