{# src/FlorianMasip/BlogBundle/Resources/views/Default/index.html.twig #}

{% extends '::base.html.twig' %}

{% block title %} Recherche {% endblock %}

{% block content %}

<h1 class="page-title">Résultats de la recherche : {{ keyword }}</h1>

<div id="results-blogs">

{% if results|length > 0 %}
{% for b in results %}
    <div class="panel panel-default blog-post">
        <header class="panel-heading">
            <a class="label label-primary inset blog-post-type" href="{{ path('blog_search', {'search': b.theme}) }}">
                {{ b.theme }}
            </a>
            <i class="glyphicon glyphicon-chevron-right separator"></i>
            <h5 class="blog-post-title">
                {% if b.name|length < 60 %}
                {{ b.name }}
                {% else %}
                {{ b.name[:60] }}...
                {% endif %}
            </h5>
            <br/>
        </header>
        <div class="panel-body">
            <a class="btn btn-primary go-to-post" href="{{ path('blog_view', {'url_blog': b.urlAlias}) }}">
                voir le blog <i class="glyphicon glyphicon-plus"></i>
            </a>
            <p>
                {% if b.description|length < 350 %}
                {{ b.description }}
                {% else %}
                {{ b.description[:350] }}...
                {% endif %}
            </p>
        </div>
    </div>
</div>
{% endfor %}
{% else %}
<div class="panel panel-default blog-post">
    aucun résultat
</div>
{% endif %}

{% endblock %}
